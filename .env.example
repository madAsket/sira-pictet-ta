# OpenAI
OPENAI_API_KEY=
OPENAI_COPILOT_MODEL=gpt-5-mini
OPENAI_EXTRACTOR_MODEL=gpt-5-mini
OPENAI_TXT2SQL_MODEL=gpt-5-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# OpenAI tuning
OPENAI_TXT2SQL_MAX_OUTPUT_TOKENS=900
OPENAI_TXT2SQL_REASONING_EFFORT=minimal
OPENAI_FINAL_MAX_OUTPUT_TOKENS=4000
OPENAI_FINAL_MAX_ANSWER_CHARS=3000
OPENAI_FINAL_REASONING_EFFORT=minimal

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=pdf_chunks

# PDF ingest
PDF_INPUT_DIR=data/PDF
PDF_CHUNK_SIZE_TOKENS=900
PDF_CHUNK_OVERLAP_RATIO=0.15
PDF_DEDUP_SIMILARITY=0.95
PDF_METADATA_CONFIDENCE_THRESHOLD=0.70
PDF_METADATA_MAX_OUTPUT_TOKENS=1200
PDF_METADATA_PAGE_CHAR_LIMIT=3000
PDF_METADATA_TOTAL_CHAR_LIMIT=8000
PDF_DOC_VERSION=v1
PDF_UPLOAD_BATCH_SIZE=64
PDF_TOPIC_MAX_OUTPUT_TOKENS=300
PDF_TOPIC_REASONING_EFFORT=minimal
PDF_TOPIC_MIN_CONFIDENCE=0.60

# Upload API limits
API_UPLOAD_PDF_MAX_FILES=20
API_UPLOAD_PDF_MAX_FILE_BYTES=10485760
API_UPLOAD_EQUITIES_MAX_FILE_BYTES=20971520

# RAG
RAG_TOP_K=8
RAG_MAX_SOURCES=3
RAG_DEDUP_SIMILARITY_THRESHOLD=0.95
RAG_MIN_SCORE=0.25
RAG_CONTEXT_MAX_SNIPPETS=5
RAG_CONTEXT_MAX_CHARS=4000

# SQL and pipeline policy
SQL_ROWS_PREVIEW_LIMIT=5
SQL_MAX_LIMIT=50
NON_COMPANY_INTENT_OVERRIDE_THRESHOLD=0.70
COMPOSER_DEBUG_FLAGS_ENABLED=true

# API runtime
API_DEBUG_RESPONSE=false
API_LOG_LEVEL=INFO
API_HOST=localhost
API_PORT=8020